<div class="navbar">
  <div class="navbar-inner">
    <%= link_to "精品导购",Settings[:domain],:class=>"brand"%>

    <ul class="nav">
      <li class="<%=css_active?(@css_recommend)%>"><%= link_to "推荐专区",url(:home,:recommend)%></li>
      <li class="<%=css_active?(@css_share)%>"><%= link_to "网友晒单",url(:home,:share)%></li>
      <li class="<%=css_active?(@css_found)%>"><%= link_to "发现频道",url(:home,:found)%></li>
    </ul>

    <p class="navbar-text pull-right">
    <% if login? %>
      <%= current_user.name %>
      <%= link_to "退出",url(:account,:logout),:method=>:delete,:class=>"navbar-link" %>
    <% else %>
      <%= link_to "登录",url(:account,:login),:class=>"navbar-link"%>
      <%= link_to "注册",url(:account,:register),:class=>"navbar-link"%>
    <% end %>
    </p>

    <form class="navbar-form form-search">
      <div class="input-append">
        <input type="text" class="span2 search-query" placeholder="搜索商品">
        <button type="submit" class="btn"><i class="icon-search"></i></button>
      </div>
    </form>

  </div>
</div>

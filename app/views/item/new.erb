<% content_for :stylesheets do %>
  <link type="text/css" rel="stylesheet" href="/ueditor/themes/default/css/ueditor.css">
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
  <script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
  <script type="text/javascript">
    ////更多其他参数，请参考ueditor.config.js中的配置项
    UE.getEditor('myEditor',{
      toolbars:[['fullScreen','source','preview','bold','italic','fontsize','fontfamily','forecolor','justifyleft','justifycenter','justifyright','link','unlink']], 
      //focus时自动清空初始化时的内容
      autoClearinitialContent:true,
      //默认的编辑区域高度
      initialFrameHeight:300,
      //关闭elementPath
      elementPathEnabled:false
    });
  </script>
<% end %>

<% content_for :jquery do %>
  store.validateNewItemForm();
<% end %>

